# Server Configuration
HOST=127.0.0.1
PORT=1337
NODE_ENV=production

# Application Keys
APP_KEYS=exampleAppKey1,exampleAppKey2,exampleAppKey3,exampleAppKey4
API_TOKEN_SALT=exampleApiTokenSalt
ADMIN_JWT_SECRET=exampleAdminJwtSecret
TRANSFER_TOKEN_SALT=exampleTransferTokenSalt

# Database Configuration
DATABASE_CLIENT=postgres
JWT_SECRET=exampleJwtSecret
DATABASE_URL=postgres://postgres:examplePassword@host.docker.internal:5432/exampleDB

# Parsed Database Configuration (from DATABASE_URL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=exampleDB
DB_USER=postgres
DB_PASSWORD=examplePassword

# Optional: Uncomment if using SQLite
# DATABASE_FILENAME=.tmp/data.db
# JWT_SECRET=exampleJwtSecret2

# Yandex S3 Services
YANDEX_CLOUD_ACCESS_KEY_ID=exampleAccessKeyId
YANDEX_CLOUD_ACCESS_SECRET=exampleAccessSecret
YANDEX_CLOUD_REGION=ru-central1
YANDEX_CLOUD_BUCKET=exampleBucket

# TLS Settings (for development, ignoring TLS warnings)
NODE_TLS_REJECT_UNAUTHORIZED=0
