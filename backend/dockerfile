FROM node:18-alpine

# Устанавливаем необходимые зависимости для сборки sharp
RUN apk add --no-cache \
    libc6-compat \
    g++ \
    make \
    python3 \
    vips-dev

# Установка рабочей директории
WORKDIR /app

# Копируем package.json и package-lock.json (если он есть)
COPY package*.json ./ 

# Устанавливаем зависимости и sharp для linuxmusl
RUN npm install --ignore-scripts=false --platform=linuxmusl --arch=x64 --verbose

# Копируем все файлы проекта в контейнер
COPY . .

# Выполняем сборку Strapi
RUN npm run build

# Открываем порты (по умолчанию Strapi использует 1337)
EXPOSE 1337

# Команда для запуска Strapi в режиме разработки 
CMD ["npm", "run", "dev"]
